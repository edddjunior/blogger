<% posts_reverse.each do |post| %>
  <%= link_to post_path(post) do %>
    <div class="card mt-3 btn btn-lg btn-outline-light text-dark">
      <div class="card-body">
        <h5 class="card-title"><strong><%= truncate(post.title, :length => 13) %></strong></h5>
      </div>
      <div class="card-footer">
        <h6><leader class="text-muted"><%= truncate(post.created_at.to_s[0...-4]) %></leader></h6>
      </div>
    </div>
  <% end %>
<% end %>
